{%- capture baseName -%}
  {%- if base.typeParam -%}
    <I>${{ base.typeParam }}</I>
  {%- else -%}
    {{ base.name }}
    {%- if base.typeKind == "Enum" -%}
      .{{ base.member }}
    {%- endif -%}
    {%- if base.typeArgs -%}
      <B>&lt;</B>
      {%- for arg in base.typeArgs -%}
        {%- render "base" with arg as base -%}
        {%- unless forloop.last %}, {% endunless -%}
      {%- endfor -%}
      <B>&gt;</B>
    {%- endif -%}
  {%- endif -%}
{%- endcapture -%}
{%- render "descr", name: baseName, descr: base.description -%}
