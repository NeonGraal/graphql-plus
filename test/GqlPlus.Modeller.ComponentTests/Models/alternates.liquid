<table>
  <thead>
    <tr>
      <th>Alternates</th>
      <th class="from">Object</th>
    </tr>
  </thead>
  {%- for alt in alternates %}
  <tr>
    <td>
      {%- render "base" with alt as base -%}
      {%- render "modifiers" with alt.collections as modifiers -%}
    </td>
    <td class="from">{{ alt.object }}</td>
  </tr>
  {%- endfor %}
</table>
